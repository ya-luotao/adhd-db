---
import DatabaseLayout from '../../../layouts/DatabaseLayout.astro';
import { getDrugs, getDrugRaw, getLocalizedValue, getLocalizedArray, type TravelStatus } from '../../../lib/data';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../../i18n/utils';

// Prerender all routes at build time (required for Cloudflare Workers)
export const prerender = true;

export function getStaticPaths() {
  const drugs = getDrugs();
  return drugs.map(drug => ({
    params: { id: drug.id },
    props: { drug },
  }));
}

const { drug } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const rawYaml = getDrugRaw(drug.id);

// Helper to get localized drug field
const l = (value: any) => getLocalizedValue(value, lang);
const la = (value: any) => getLocalizedArray(value, lang);

// Travel status config
const statusConfig: Record<TravelStatus, { color: string; bg: string; label: string }> = {
  allowed: { color: '#22c55e', bg: 'rgba(34, 197, 94, 0.15)', label: 'GO' },
  restricted: { color: '#f59e0b', bg: 'rgba(245, 158, 11, 0.15)', label: 'CAUTION' },
  requires_permit: { color: '#a855f7', bg: 'rgba(168, 85, 247, 0.15)', label: 'PERMIT' },
  prohibited: { color: '#ef4444', bg: 'rgba(239, 68, 68, 0.15)', label: 'STOP' },
};

// Region emoji flags
const regionFlags: Record<string, string> = {
  US: 'ðŸ‡ºðŸ‡¸', CN: 'ðŸ‡¨ðŸ‡³', EU: 'ðŸ‡ªðŸ‡º', JP: 'ðŸ‡¯ðŸ‡µ', UK: 'ðŸ‡¬ðŸ‡§', AU: 'ðŸ‡¦ðŸ‡º', CA: 'ðŸ‡¨ðŸ‡¦'
};

// Get available regions count
const availableCount = drug.approvals?.filter((a: any) => a.available).length || 0;
const totalRegions = drug.approvals?.length || 0;

// Drug class colors
const classColors = {
  stimulant: '#ef4444',
  'non-stimulant': '#3b82f6'
};
const classColor = classColors[drug.drugClass as keyof typeof classColors] || '#888';
---

<DatabaseLayout title={l(drug.genericName)} activeDrugId={drug.id}>
  <article class="drug-page">
    <!-- BREADCRUMB -->
    <nav class="breadcrumb">
      <a href={getLocalizedPath('/data/drugs', lang)} class="crumb">drugs</a>
      <span class="crumb-sep">/</span>
      <span class="crumb-current">{drug.id}</span>
    </nav>

    <!-- HERO: Bold asymmetric header -->
    <header class="hero">
      <div class="hero-label">
        <span class="label-dot" style={`background: ${classColor}`}></span>
        <span class="label-text">{l(drug.drugClassLabel) || drug.drugClass}</span>
        {drug.controlledSubstance && <span class="controlled-tag">CONTROLLED</span>}
      </div>

      <h1 class="drug-title">{l(drug.genericName)}</h1>

      <div class="hero-stats">
        <div class="stat-block stat-primary">
          <span class="stat-number">{availableCount}</span>
          <span class="stat-divider">/</span>
          <span class="stat-total">{totalRegions}</span>
          <span class="stat-label">REGIONS</span>
        </div>

        {drug.forms && (
          <div class="stat-block">
            <span class="stat-number">{drug.forms.length}</span>
            <span class="stat-label">FORMS</span>
          </div>
        )}

        {drug.durationHours && (
          <div class="stat-block">
            <span class="stat-number">{drug.durationHours}</span>
            <span class="stat-unit">hr</span>
            <span class="stat-label">DURATION</span>
          </div>
        )}

        {drug.onsetMinutes && (
          <div class="stat-block">
            <span class="stat-number">{drug.onsetMinutes}</span>
            <span class="stat-unit">min</span>
            <span class="stat-label">ONSET</span>
          </div>
        )}
      </div>
    </header>

    <!-- QUICK DATA: Horizontal scroll cards -->
    <section class="data-ribbon">
      <div class="ribbon-card">
        <span class="ribbon-label">CATEGORY</span>
        <span class="ribbon-value">{l(drug.categoryLabel) || drug.category}</span>
      </div>

      {drug.neurotransmittersAffected && (
        <div class="ribbon-card ribbon-wide">
          <span class="ribbon-label">TARGETS</span>
          <div class="ribbon-chips">
            {drug.neurotransmittersAffected.map((nt: string) => (
              <span class="chip chip-neuro">{nt.toUpperCase()}</span>
            ))}
          </div>
        </div>
      )}

      {Object.entries(drug.brandNames || {}).slice(0, 1).map(([region, brands]: [string, any]) => (
        brands?.[0] && (
          <div class="ribbon-card">
            <span class="ribbon-label">BRAND ({region})</span>
            <span class="ribbon-value">{brands[0]}</span>
          </div>
        )
      ))}
    </section>

    <!-- MECHANISM -->
    {drug.mechanismOfAction && (
      <section class="content-block">
        <h2 class="block-title">
          <span class="title-marker"></span>
          {t('drugs.mechanism')}
        </h2>
        <p class="mechanism-text">{l(drug.mechanismOfAction)}</p>
      </section>
    )}

    <!-- REGIONAL APPROVALS: Grid of status cards -->
    <section class="content-block">
      <h2 class="block-title">
        <span class="title-marker"></span>
        {t('drugs.approvals')}
      </h2>

      <div class="region-grid">
        {drug.approvals?.map((approval: any) => (
          <div class="region-card" data-available={approval.available}>
            <div class="region-header">
              <span class="region-flag">{regionFlags[approval.region] || ''}</span>
              <span class="region-code">{approval.region}</span>
              <span class="region-status" data-available={approval.available}>
                {approval.available ? 'ACTIVE' : 'INACTIVE'}
              </span>
            </div>

            <div class="region-data">
              <div class="data-row">
                <span class="data-key">Agency</span>
                <span class="data-val">{approval.agency}</span>
              </div>
              {approval.year && (
                <div class="data-row">
                  <span class="data-key">Year</span>
                  <span class="data-val data-year">{approval.year}</span>
                </div>
              )}
              <div class="data-row">
                <span class="data-key">Ages</span>
                <span class="data-val">{l(approval.approvedAges) || 'â€”'}</span>
              </div>
            </div>

            {l(approval.notes) && (
              <div class="region-note">{l(approval.notes)}</div>
            )}
          </div>
        ))}
      </div>
    </section>

    <!-- TRAVEL RULES -->
    {drug.travelRules && (
      <section class="content-block travel-block">
        <h2 class="block-title">
          <span class="title-marker marker-warning"></span>
          {t('travel.title')}
        </h2>

        {drug.travelRules.generalAdvice && (
          <div class="travel-alert">
            <span class="alert-icon">!</span>
            <p>{l(drug.travelRules.generalAdvice)}</p>
          </div>
        )}

        {drug.travelRules.requiredDocumentation && drug.travelRules.requiredDocumentation.length > 0 && (
          <div class="docs-required">
            <h3 class="sub-title">{t('travel.requiredDocs')}</h3>
            <div class="doc-list">
              {drug.travelRules.requiredDocumentation.map((doc: any) => (
                <div class="doc-item">
                  <span class="doc-bullet">â—†</span>
                  <div class="doc-content">
                    <span class="doc-type">{l(doc.typeLabel)}</span>
                    {doc.notes && <span class="doc-note">{l(doc.notes)}</span>}
                  </div>
                </div>
              ))}
            </div>

            {drug.travelRules.maxPersonalSupply && (
              <div class="supply-limit">
                <span class="supply-label">MAX SUPPLY</span>
                <span class="supply-value">{drug.travelRules.maxPersonalSupply.default}</span>
              </div>
            )}
          </div>
        )}

        {drug.travelRules.crossBorderRules && drug.travelRules.crossBorderRules.length > 0 && (
          <div class="routes-section">
            <h3 class="sub-title">{t('travel.specificRules')}</h3>
            <div class="routes-grid">
              {drug.travelRules.crossBorderRules.map((rule: any) => {
                const config = statusConfig[rule.status as TravelStatus];
                return (
                  <div class="route-card" style={`--route-color: ${config.color}; --route-bg: ${config.bg}`}>
                    <div class="route-header">
                      <div class="route-path">
                        <span class="route-from">{rule.fromRegion}</span>
                        <span class="route-arrow">â†’</span>
                        <span class="route-to">{rule.toRegion}</span>
                      </div>
                      <span class="route-badge">{config.label}</span>
                    </div>

                    <div class="route-body">
                      {rule.maxSupply && (
                        <div class="route-info">
                          <span class="info-key">Limit:</span>
                          <span class="info-val">{rule.maxSupply}</span>
                        </div>
                      )}

                      {la(rule.requirements).length > 0 && (
                        <ul class="route-reqs">
                          {la(rule.requirements).map((req: string) => (
                            <li>{req}</li>
                          ))}
                        </ul>
                      )}

                      {rule.notes && (
                        <p class="route-note">{l(rule.notes)}</p>
                      )}
                    </div>

                    {rule.sources && rule.sources.length > 0 && (
                      <div class="route-sources">
                        {rule.sources.map((src: string) => (
                          <a href={src} target="_blank" rel="noopener noreferrer">â†— {new URL(src).hostname}</a>
                        ))}
                      </div>
                    )}
                  </div>
                );
              })}
            </div>
          </div>
        )}

        <a href={getLocalizedPath('/tools/region-checker', lang)} class="tool-link">
          {t('travel.useChecker')} <span class="link-arrow">â†’</span>
        </a>
      </section>
    )}

    <!-- FORMULATIONS -->
    {drug.forms && drug.forms.length > 0 && (
      <section class="content-block">
        <h2 class="block-title">
          <span class="title-marker"></span>
          {t('drugs.forms')}
        </h2>

        <div class="forms-grid">
          {drug.forms.map((form: any) => (
            <div class="form-card">
              <div class="form-header">
                <span class="form-name">{form.brandName || l(form.typeLabel) || form.type}</span>
                <span class="form-duration">{form.durationHours}h</span>
              </div>

              <div class="form-meta">
                <span class="form-type">{l(form.releaseTypeLabel) || form.releaseType}</span>
              </div>

              {form.strengths && (
                <div class="form-strengths">
                  {form.strengths.map((s: string) => (
                    <span class="strength">{s}</span>
                  ))}
                </div>
              )}

              {form.notes && (
                <p class="form-note">{l(form.notes)}</p>
              )}
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- SIDE EFFECTS -->
    {drug.sideEffects && (
      <section class="content-block">
        <h2 class="block-title">
          <span class="title-marker marker-danger"></span>
          {t('drugs.sideEffects')}
        </h2>

        <div class="effects-layout">
          {drug.sideEffects.common && (
            <div class="effects-col">
              <h3 class="effects-heading">{t('drugs.common')}</h3>
              <ul class="effects-list">
                {drug.sideEffects.common.map((se: any) => (
                  <li class="effect-item">
                    <span class="effect-name">{l(se.name)}</span>
                    <span class="effect-freq">{se.frequency}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {drug.sideEffects.serious && (
            <div class="effects-col effects-serious">
              <h3 class="effects-heading">{t('drugs.serious')}</h3>
              <ul class="effects-list">
                {drug.sideEffects.serious.map((se: any) => (
                  <li class="effect-item effect-serious">
                    <span class="effect-name">{l(se.name)}</span>
                    {se.notes && <span class="effect-notes">{l(se.notes)}</span>}
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </section>
    )}

    <!-- RAW DATA -->
    <section class="content-block raw-block">
      <details class="raw-toggle">
        <summary class="raw-summary">
          <span class="raw-label">{t('drugs.showRaw')}</span>
          <span class="raw-icon">+</span>
        </summary>
        <div class="raw-content">
          <pre><code>{rawYaml}</code></pre>
          <a
            href={`https://github.com/ya-luotao/adhd-db/edit/main/packages/data/drugs/${drug.id}.yaml`}
            target="_blank"
            rel="noopener"
            class="edit-link"
          >
            {t('drugs.editOnGithub')} â†—
          </a>
        </div>
      </details>
    </section>
  </article>
</DatabaseLayout>

<style>
  /* ===========================================
   * ADHD-DB DRUG PAGE â€” "NEURAL SPARK" THEME
   * Aggressive, bold, unconventional
   * =========================================== */

  .drug-page {
    --accent: #00a86b;
    --accent-dim: rgba(0, 168, 107, 0.1);
    --accent-bold: #008f5b;
    --danger: #dc2626;
    --danger-dim: rgba(220, 38, 38, 0.08);
    --warning: #d97706;
    --warning-dim: rgba(217, 119, 6, 0.1);
    --surface: #ffffff;
    --surface-raised: #f8f9fa;
    --surface-elevated: #f1f3f5;
    --border: #e5e7eb;
    --border-strong: #d1d5db;
    --text-primary: #111827;
    --text-secondary: #4b5563;
    --text-muted: #9ca3af;

    max-width: 900px;
    color: var(--text-primary);
  }

  /* BREADCRUMB */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
    font-family: 'DM Mono', monospace;
    font-size: 0.75rem;
  }

  .crumb {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.15s;
  }

  .crumb:hover {
    color: var(--accent);
  }

  .crumb-sep {
    color: var(--border-strong);
  }

  .crumb-current {
    color: var(--text-secondary);
    font-weight: 500;
  }

  /* HERO */
  .hero {
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--border);
  }

  .hero-label {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .label-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.1); }
  }

  .label-text {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-secondary);
  }

  .controlled-tag {
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 4px 10px;
    background: rgba(255, 170, 0, 0.2);
    color: var(--warning);
    border: 1px solid var(--warning);
    border-radius: 2px;
  }

  .drug-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 600;
    line-height: 1;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-6);
    color: var(--text-primary);
  }

  .hero-stats {
    display: flex;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .stat-block {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    min-width: 70px;
  }

  .stat-primary {
    flex-direction: row;
    align-items: baseline;
    gap: 0;
    flex-wrap: wrap;
  }

  .stat-primary .stat-label {
    width: 100%;
    margin-top: var(--space-2);
  }

  .stat-number {
    font-family: 'DM Mono', monospace;
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--accent-bold);
    line-height: 1;
  }

  .stat-divider {
    font-family: 'DM Mono', monospace;
    font-size: 1rem;
    color: var(--text-muted);
    margin: 0 2px;
  }

  .stat-total {
    font-family: 'DM Mono', monospace;
    font-size: 1rem;
    color: var(--text-secondary);
  }

  .stat-unit {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-left: 2px;
  }

  .stat-label {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-muted);
    margin-top: var(--space-2);
  }

  /* DATA RIBBON */
  .data-ribbon {
    display: flex;
    gap: var(--space-4);
    overflow-x: auto;
    padding-bottom: var(--space-3);
    margin-bottom: var(--space-6);
    scrollbar-width: none;
  }

  .data-ribbon::-webkit-scrollbar {
    display: none;
  }

  .ribbon-card {
    flex-shrink: 0;
  }

  .ribbon-wide {
    min-width: 150px;
  }

  .ribbon-label {
    display: block;
    font-size: 0.55rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: 2px;
  }

  .ribbon-value {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  .ribbon-chips {
    display: flex;
    gap: var(--space-1);
    flex-wrap: wrap;
  }

  .chip {
    font-size: 0.65rem;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 2px;
  }

  .chip-neuro {
    background: var(--accent-dim);
    color: var(--accent-bold);
  }

  /* CONTENT BLOCKS */
  .content-block {
    margin-bottom: var(--space-10);
  }

  .block-title {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-secondary);
    margin-bottom: var(--space-5);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid var(--border);
  }

  .title-marker {
    width: 4px;
    height: 16px;
    background: var(--accent);
    border-radius: 1px;
  }

  .title-marker.marker-warning {
    background: var(--warning);
  }

  .title-marker.marker-danger {
    background: var(--danger);
  }

  .sub-title {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: var(--space-4);
  }

  /* MECHANISM */
  .mechanism-text {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text-secondary);
    max-width: 70ch;
  }

  /* REGION GRID */
  .region-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: var(--space-2);
  }

  .region-card {
    padding: var(--space-3);
    border-bottom: 1px solid var(--border);
  }

  .region-card[data-available="false"] {
    opacity: 0.4;
  }

  .region-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .region-flag {
    font-size: 1rem;
  }

  .region-code {
    font-family: 'DM Mono', monospace;
    font-size: 0.8rem;
    font-weight: 600;
    flex: 1;
  }

  .region-status {
    font-size: 0.55rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 2px 6px;
    border-radius: 2px;
    background: var(--danger-dim);
    color: var(--danger);
  }

  .region-status[data-available="true"] {
    background: var(--accent-dim);
    color: var(--accent-bold);
  }

  .region-data {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2) var(--space-4);
  }

  .data-row {
    display: flex;
    gap: var(--space-2);
    align-items: baseline;
  }

  .data-key {
    font-size: 0.65rem;
    color: var(--text-muted);
  }

  .data-val {
    font-size: 0.75rem;
    color: var(--text-primary);
    font-weight: 500;
  }

  .data-year {
    font-family: 'DM Mono', monospace;
    color: var(--accent-bold);
  }

  .region-note {
    margin-top: var(--space-2);
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  /* TRAVEL SECTION */
  .travel-block {
    background: var(--surface-raised);
    padding: var(--space-6);
    border: 1px solid var(--border);
    border-radius: 4px;
    border-left: 3px solid var(--warning);
  }

  .travel-alert {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--warning-dim);
    border: 1px solid var(--warning);
    border-radius: 4px;
    margin-bottom: var(--space-6);
  }

  .alert-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--warning);
    color: #000;
    font-weight: 900;
    font-size: 0.9rem;
    border-radius: 50%;
  }

  .travel-alert p {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .docs-required {
    margin-bottom: var(--space-6);
  }

  .doc-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .doc-item {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
  }

  .doc-bullet {
    color: var(--accent);
    font-size: 0.7rem;
    margin-top: 4px;
  }

  .doc-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .doc-type {
    font-weight: 600;
    color: var(--text-primary);
  }

  .doc-note {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .supply-limit {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    background: var(--surface-elevated);
    border: 1px solid var(--border);
    border-radius: 4px;
  }

  .supply-label {
    font-size: 0.65rem;
