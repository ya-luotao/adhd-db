---
import DatabaseLayout from '../../../../layouts/DatabaseLayout.astro';
import { getDrugs, getDrugRaw, getLocalizedValue, getLocalizedArray, type TravelStatus } from '../../../../lib/data';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../../../i18n/utils';

// Prerender all routes at build time (required for Cloudflare Workers)
export const prerender = true;

export function getStaticPaths() {
  const drugs = getDrugs();
  return drugs.map(drug => ({
    params: { id: drug.id },
    props: { drug },
  }));
}

const { drug } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const rawYaml = getDrugRaw(drug.id);

// Helper to get localized drug field
const l = (value: any) => getLocalizedValue(value, lang);
const la = (value: any) => getLocalizedArray(value, lang);

// Travel status config
const statusConfig: Record<TravelStatus, { color: string; bg: string; label: string }> = {
  allowed: { color: '#22c55e', bg: 'rgba(34, 197, 94, 0.15)', label: 'GO' },
  restricted: { color: '#f59e0b', bg: 'rgba(245, 158, 11, 0.15)', label: 'CAUTION' },
  requires_permit: { color: '#a855f7', bg: 'rgba(168, 85, 247, 0.15)', label: 'PERMIT' },
  prohibited: { color: '#ef4444', bg: 'rgba(239, 68, 68, 0.15)', label: 'STOP' },
};

// Region emoji flags
const regionFlags: Record<string, string> = {
  US: 'ðŸ‡ºðŸ‡¸', CN: 'ðŸ‡¨ðŸ‡³', EU: 'ðŸ‡ªðŸ‡º', JP: 'ðŸ‡¯ðŸ‡µ', UK: 'ðŸ‡¬ðŸ‡§', AU: 'ðŸ‡¦ðŸ‡º', CA: 'ðŸ‡¨ðŸ‡¦'
};

// Get available regions count
const availableCount = drug.approvals?.filter((a: any) => a.available).length || 0;
const totalRegions = drug.approvals?.length || 0;

// Drug class colors
const classColors = {
  stimulant: '#ef4444',
  'non-stimulant': '#3b82f6'
};
const classColor = classColors[drug.drugClass as keyof typeof classColors] || '#888';

// Generate case file number
const caseNumber = `CF-${drug.id.substring(0, 3).toUpperCase()}-${new Date().getFullYear()}`;
---

<DatabaseLayout title={l(drug.genericName)} activeDrugId={drug.id}>
  <article class="dossier">
    <!-- BREADCRUMB -->
    <nav class="breadcrumb">
      <a href={getLocalizedPath('/data/drugs', lang)} class="crumb">drugs</a>
      <span class="crumb-sep">/</span>
      <span class="crumb-current">{drug.id}</span>
    </nav>

    <!-- ============================================
         HERO: CASE FILE COVER
         Classified dossier header with specimen ID
         ============================================ -->
    <header class="case-file">
      <div class="case-file-band">
        <div class="case-file-left">
          <span class="case-label">CASE FILE</span>
          <span class="case-number">{caseNumber}</span>
        </div>
        <div class="case-file-right">
          <span class="classification-badge" style={`--class-color: ${classColor}`}>
            {l(drug.drugClassLabel) || drug.drugClass}
          </span>
          {drug.controlledSubstance && (
            <span class="controlled-stamp">
              <span class="stamp-border">
                <span class="stamp-text">CONTROLLED<br/>SUBSTANCE</span>
              </span>
            </span>
          )}
        </div>
      </div>

      <div class="case-file-body">
        <div class="specimen-id">
          <span class="specimen-label">SPECIMEN IDENTIFICATION</span>
          <h1 class="specimen-name">{l(drug.genericName)}</h1>
        </div>

        <!-- Integrated specimen tags -->
        <div class="case-tags">
          <div class="case-tag">
            <span class="case-tag-label">CATEGORY</span>
            <span class="case-tag-value">{l(drug.categoryLabel) || drug.category}</span>
          </div>

          {drug.neurotransmittersAffected && (
            <div class="case-tag case-tag-wide">
              <span class="case-tag-label">TARGETS</span>
              <div class="case-tag-chips">
                {drug.neurotransmittersAffected.map((nt: string) => (
                  <span class="target-chip">{nt.toUpperCase()}</span>
                ))}
              </div>
            </div>
          )}

          {Object.entries(drug.brandNames || {}).slice(0, 1).map(([region, brands]: [string, any]) => (
            brands?.[0] && (
              <div class="case-tag">
                <span class="case-tag-label">BRAND ({region})</span>
                <span class="case-tag-value">{brands[0]}</span>
              </div>
            )
          ))}
        </div>
      </div>

      <div class="case-file-stripe"></div>
    </header>

    <!-- ============================================
         MECHANISM
         ============================================ -->
    {drug.mechanismOfAction && (
      <section class="mechanism-section">
        <h2 class="section-title">
          <span class="title-marker"></span>
          {t('drugs.mechanism')}
        </h2>
        <p class="mechanism-text">{l(drug.mechanismOfAction)}</p>
      </section>
    )}

    <!-- ============================================
         REGIONAL APPROVALS
         ============================================ -->
    <section class="approvals-section">
      <h2 class="section-title">
        <span class="title-marker"></span>
        {t('drugs.approvals')}
      </h2>

      <div class="approvals-table">
        <div class="approvals-header">
          <span class="col-region">Region</span>
          <span class="col-agency">Agency</span>
          <span class="col-year">Year</span>
          <span class="col-ages">Ages</span>
          <span class="col-status">Status</span>
        </div>
        {drug.approvals?.map((approval: any) => (
          <div class="approval-row" data-available={approval.available}>
            <span class="col-region">
              <span class="region-flag">{regionFlags[approval.region] || ''}</span>
              <span class="region-code">{approval.region}</span>
            </span>
            <span class="col-agency">{approval.agency}</span>
            <span class="col-year">{approval.year || 'â€”'}</span>
            <span class="col-ages">{l(approval.approvedAges) || 'â€”'}</span>
            <span class="col-status">
              <span class="status-dot" data-available={approval.available}></span>
              {approval.available ? 'Available' : 'Not Available'}
            </span>
          </div>
        ))}
      </div>
    </section>

    <!-- TRAVEL RULES - MODAL -->
    {drug.travelRules && (
      <>
        <!-- TRAVEL MODAL -->
        <div class="travel-modal" id="travel-modal">
          <div class="modal-backdrop" id="modal-backdrop"></div>
          <div class="modal-content">
            <button class="modal-close" id="modal-close">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>

            <div class="travel-pass">
              <!-- Pass Header -->
              <header class="pass-header">
                <div class="pass-header-left">
                  <span class="pass-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/>
                    </svg>
                  </span>
                  <div class="pass-title-block">
                    <span class="pass-eyebrow">{t('travel.title')}</span>
                    <span class="pass-drug-name">{l(drug.genericName)}</span>
                  </div>
                </div>
                <div class="pass-header-right">
                  {drug.controlledSubstance && (
                    <span class="pass-controlled-stamp">
                      <span class="stamp-inner">CONTROLLED</span>
                    </span>
                  )}
                </div>
              </header>

              <!-- Perforated Divider -->
              <div class="pass-perforation"></div>

              <!-- Advisory Banner -->
              {drug.travelRules.generalAdvice && (
                <div class="pass-advisory">
                  <div class="advisory-icon">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                      <circle cx="12" cy="12" r="10"></circle>
                      <line x1="12" y1="8" x2="12" y2="12"></line>
                      <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                  </div>
                  <p class="advisory-text">{l(drug.travelRules.generalAdvice)}</p>
                </div>
              )}

              <!-- Two-Column Layout: Documents & Supply -->
              <div class="pass-info-grid">
                <!-- Required Documents -->
                {drug.travelRules.requiredDocumentation && drug.travelRules.requiredDocumentation.length > 0 && (
                  <div class="pass-docs">
                    <h3 class="pass-section-title">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                        <polyline points="10 9 9 9 8 9"></polyline>
                      </svg>
                      {t('travel.requiredDocs')}
                    </h3>
                    <ul class="docs-checklist">
                      {drug.travelRules.requiredDocumentation.map((doc: any) => (
                        <li class="checklist-item">
                          <span class="check-box"></span>
                          <div class="check-content">
                            <span class="check-label">{l(doc.typeLabel)}</span>
                            {doc.notes && <span class="check-note">{l(doc.notes)}</span>}
                          </div>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}

                <!-- Supply Limit Tag -->
                {drug.travelRules.maxPersonalSupply && (
                  <div class="pass-supply">
                    <div class="supply-tag">
                      <div class="tag-hole"></div>
                      <div class="tag-body">
                        <span class="tag-label">{t('travel.maxSupply')}</span>
                        <span class="tag-value">{drug.travelRules.maxPersonalSupply.default}</span>
                      </div>
                    </div>
                  </div>
                )}
              </div>

              <!-- Cross-Border Routes -->
              {drug.travelRules.crossBorderRules && drug.travelRules.crossBorderRules.length > 0 && (
                <div class="pass-routes">
                  <h3 class="pass-section-title routes-title">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <line x1="2" y1="12" x2="22" y2="12"></line>
                      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                    </svg>
                    {t('travel.specificRules')}
                  </h3>

                  <div class="routes-stack">
                    {drug.travelRules.crossBorderRules.map((rule: any) => {
                      const config = statusConfig[rule.status as TravelStatus];
                      return (
                        <div class="route-ticket" data-status={rule.status}>
                          <!-- Route Header with Flight Path -->
                          <div class="ticket-route">
                            <div class="route-endpoint">
                              <span class="endpoint-flag">{regionFlags[rule.fromRegion] || ''}</span>
                              <span class="endpoint-code">{rule.fromRegion}</span>
                            </div>

                            <div class="route-flight-path">
                              <span class="flight-dot"></span>
                              <span class="flight-line"></span>
                              <svg class="flight-plane" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/>
                              </svg>
                              <span class="flight-line"></span>
                              <span class="flight-dot"></span>
                            </div>

                            <div class="route-endpoint">
                              <span class="endpoint-flag">{regionFlags[rule.toRegion] || ''}</span>
                              <span class="endpoint-code">{rule.toRegion}</span>
                            </div>
                          </div>

                          <!-- Status Stamp -->
                          <div class="ticket-stamp" style={`--stamp-color: ${config.color}`}>
                            <div class="stamp-circle">
                              <span class="stamp-text">{config.label}</span>
                            </div>
                          </div>

                          <!-- Ticket Details -->
                          <div class="ticket-details">
                            {rule.maxSupply && (
                              <div class="detail-row">
                                <span class="detail-icon">ðŸ“¦</span>
                                <span class="detail-label">Limit</span>
                                <span class="detail-value">{rule.maxSupply}</span>
                              </div>
                            )}

                            {la(rule.requirements).length > 0 && (
                              <div class="detail-requirements">
                                <span class="req-label">{t('travel.requirements')}:</span>
                                <ul class="req-list">
                                  {la(rule.requirements).map((req: string) => (
                                    <li>{req}</li>
                                  ))}
                                </ul>
                              </div>
                            )}

                            {rule.notes && (
                              <p class="detail-notes">{l(rule.notes)}</p>
                            )}
                          </div>

                          <!-- Sources Footer -->
                          {rule.sources && rule.sources.length > 0 && (
                            <div class="ticket-sources">
                              <span class="sources-label">{t('travel.sources')}:</span>
                              {rule.sources.map((src: string) => (
                                <a href={src} target="_blank" rel="noopener noreferrer" class="source-link">
                                  {new URL(src).hostname}
                                </a>
                              ))}
                            </div>
                          )}
                        </div>
                      );
                    })}
                  </div>
                </div>
              )}

              <!-- Pass Footer with CTA -->
              <div class="pass-footer">
                <div class="pass-barcode">
                  <div class="barcode-lines">
                    {[...Array(30)].map((_, i) => (
                      <span class="bar" style={`height: ${20 + Math.random() * 20}px`}></span>
                    ))}
                  </div>
                </div>
                <a href={getLocalizedPath('/tools/region-checker', lang)} class="pass-cta">
                  <span class="cta-text">{t('travel.useChecker')}</span>
                  <span class="cta-arrow">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                      <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                  </span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </>
    )}

    <!-- ============================================
         FORMULATIONS TABLE
         Clean table with â„ž header
         ============================================ -->
    {drug.forms && drug.forms.length > 0 && (
      <section class="forms-section">
        <div class="forms-header">
          <span class="rx-symbol">â„ž</span>
          <h2 class="section-title">
            <span class="title-marker"></span>
            {t('drugs.forms')}
          </h2>
        </div>

        <div class="forms-table">
          <div class="forms-table-header">
            <span class="col-form">Form</span>
            <span class="col-release">Release</span>
            <span class="col-duration">Duration</span>
            <span class="col-strengths">Strengths</span>
          </div>
          {drug.forms.map((form: any) => (
            <div class="form-row">
              <span class="col-form">
                <span class="form-name">{form.brandName || l(form.typeLabel) || form.type}</span>
              </span>
              <span class="col-release">{l(form.releaseTypeLabel) || form.releaseType}</span>
              <span class="col-duration">{form.durationHours}h</span>
              <span class="col-strengths">
                {form.strengths ? (
                  <span class="strengths-list">
                    {form.strengths.map((s: string) => (
                      <span class="strength-pill">{s}</span>
                    ))}
                  </span>
                ) : 'â€”'}
              </span>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- ============================================
         SIDE EFFECTS: HAZMAT WARNING LABELS
         Caution tape stripes, warning triangles
         ============================================ -->
    {drug.sideEffects && (
      <section class="hazmat-section">
        <div class="hazmat-header">
          <div class="caution-stripe"></div>
          <div class="hazmat-title-block">
            <span class="hazmat-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                <line x1="12" y1="9" x2="12" y2="13"></line>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
              </svg>
            </span>
            <h2 class="hazmat-title">{t('drugs.sideEffects')}</h2>
          </div>
          <div class="caution-stripe"></div>
        </div>

        <div class="hazmat-grid">
          {drug.sideEffects.common && (
            <div class="hazmat-card hazmat-common">
              <div class="card-tab">
                <span class="tab-label">COMMON</span>
              </div>
              <ul class="hazmat-list">
                {drug.sideEffects.common.map((se: any) => (
                  <li class="hazmat-item">
                    <span class="item-bullet"></span>
                    <span class="item-name">{l(se.name)}</span>
                    <span class="item-freq">{se.frequency}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {drug.sideEffects.serious && (
            <div class="hazmat-card hazmat-serious">
              <div class="card-tab tab-danger">
                <span class="tab-icon">âš </span>
                <span class="tab-label">SERIOUS</span>
              </div>
              <ul class="hazmat-list">
                {drug.sideEffects.serious.map((se: any) => (
                  <li class="hazmat-item hazmat-item-serious">
                    <span class="item-bullet bullet-danger"></span>
                    <div class="item-content">
                      <span class="item-name">{l(se.name)}</span>
                      {se.notes && <span class="item-notes">{l(se.notes)}</span>}
                    </div>
                  </li>
                ))}
              </ul>
              <div class="serious-warning">
                <span class="warning-icon">!</span>
                <span class="warning-text">Seek medical attention immediately</span>
              </div>
            </div>
          )}
        </div>
      </section>
    )}

    <!-- ============================================
         RAW DATA: ARCHIVE FILE DRAWER
         Manila folder tabs, classified stamp
         ============================================ -->
    <section class="archive-section">
      <details class="archive-folder">
        <summary class="folder-tab">
          <div class="tab-left">
            <span class="folder-icon">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
              </svg>
            </span>
            <span class="folder-label">{t('drugs.showRaw')}</span>
          </div>
          <div class="tab-right">
            <span class="classified-stamp">ARCHIVE</span>
            <span class="folder-toggle">+</span>
          </div>
        </summary>
        <div class="folder-contents">
          <div class="file-header">
            <span class="file-id">FILE: {drug.id}.yaml</span>
            <span class="file-date">Last updated: {new Date().toISOString().split('T')[0]}</span>
          </div>
          <pre class="file-code"><code>{rawYaml}</code></pre>
          <a
            href={`https://github.com/ya-luotao/adhd-db/edit/main/packages/data/drugs/${drug.id}.yaml`}
            target="_blank"
            rel="noopener"
            class="edit-link"
          >
            <span class="edit-icon">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
              </svg>
            </span>
            {t('drugs.editOnGithub')}
          </a>
        </div>
      </details>
    </section>
  </article>
</DatabaseLayout>

<style>
  /* ===========================================
   * PHARMACEUTICAL DOSSIER DESIGN SYSTEM
   * A cohesive document-inspired aesthetic
   * =========================================== */

  .dossier {
    --dossier-bg: #fdfcfa;
    --dossier-paper: #fffef9;
    --dossier-border: #e8e4dc;
    --dossier-accent: #1a1a2e;
    --dossier-muted: #8b8680;
    --dossier-gold: #c4a052;
    --dossier-cream: #f5f2eb;
    --dossier-ink: #2c2c2c;
    --dossier-red: #c53030;
    --dossier-green: #276749;
    --dossier-blue: #2b6cb0;

    max-width: 900px;
    color: var(--dossier-ink);
  }

  /* Paper texture overlay */
  .dossier::before {
    content: '';
    position: fixed;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%' height='100%' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.015;
    pointer-events: none;
    z-index: -1;
  }

  /* BREADCRUMB */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
    font-family: 'DM Mono', monospace;
    font-size: 0.7rem;
    letter-spacing: 0.05em;
  }

  .crumb {
    color: var(--dossier-muted);
    text-decoration: none;
    transition: color 0.15s;
  }

  .crumb:hover {
    color: var(--dossier-gold);
  }

  .crumb-sep {
    color: var(--dossier-border);
  }

  .crumb-current {
    color: var(--dossier-accent);
    font-weight: 500;
  }

  /* ============================================
     CASE FILE COVER (Hero)
     ============================================ */

  .case-file {
    background: var(--dossier-paper);
    border: 2px solid var(--dossier-border);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: var(--space-8);
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.02),
      0 10px 20px rgba(0, 0, 0, 0.03),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
    position: relative;
  }

  .case-file-band {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3) var(--space-5);
    background: var(--dossier-cream);
    border-bottom: 1px solid var(--dossier-border);
  }

  .case-file-left {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .case-label {
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--dossier-muted);
  }

  .case-number {
    font-family: 'DM Mono', monospace;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: var(--dossier-accent);
  }

  .case-file-right {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .classification-badge {
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 4px 10px;
    background: transparent;
    border: 1px solid var(--class-color);
    color: var(--class-color);
    border-radius: 2px;
  }

  .controlled-stamp {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .stamp-border {
    width: 48px;
    height: 48px;
    border: 2px dashed var(--dossier-gold);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: rotate(-12deg);
    opacity: 0.7;
  }

  .stamp-border .stamp-text {
    font-family: 'DM Mono', monospace;
    font-size: 0.35rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: var(--dossier-gold);
    text-align: center;
    line-height: 1.4;
  }

  .case-file-body {
    padding: var(--space-6);
  }

  .specimen-id {
    margin-bottom: var(--space-5);
  }

  .specimen-label {
    display: block;
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--dossier-muted);
    margin-bottom: var(--space-2);
  }

  .specimen-name {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2.2rem, 7vw, 3.5rem);
    font-weight: 600;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--dossier-accent);
    margin: 0;
  }

  .case-tags {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px dashed var(--dossier-border);
  }

  .case-tag {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .case-tag-wide {
    flex: 1;
    min-width: 150px;
  }

  .case-tag-label {
    font-family: 'DM Mono', monospace;
    font-size: 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--dossier-muted);
  }

  .case-tag-value {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--dossier-accent);
  }

  .case-tag-chips {
    display: flex;
    gap: var(--space-1);
  }

  .target-chip {
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 700;
    padding: 2px 6px;
    background: rgba(196, 160, 82, 0.15);
    color: var(--dossier-gold);
    border-radius: 2px;
    letter-spacing: 0.05em;
  }

  .case-file-stripe {
    height: 4px;
    background: linear-gradient(90deg,
      var(--dossier-gold) 0%,
      #e8d5a3 50%,
      var(--dossier-gold) 100%
    );
  }

  /* ============================================
     MECHANISM
     ============================================ */

  .mechanism-section {
    margin-bottom: var(--space-8);
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-family: 'DM Mono', monospace;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--dossier-accent);
    margin: 0 0 var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid var(--dossier-border);
  }

  .title-marker {
    width: 4px;
    height: 16px;
    background: var(--dossier-gold);
    border-radius: 1px;
  }

  .mechanism-text {
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--dossier-ink);
    max-width: 70ch;
  }

  /* ============================================
     REGIONAL APPROVALS
     ============================================ */

  .approvals-section {
    margin-bottom: var(--space-8);
  }

  .approvals-table {
    border: 1px solid var(--dossier-border);
    border-radius: 4px;
    overflow: hidden;
  }

  .approvals-header {
    display: grid;
    grid-template-columns: 100px 80px 60px 1fr 110px;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    background: var(--dossier-cream);
    border-bottom: 1px solid var(--dossier-border);
    font-family: 'DM Mono', monospace;
    font-size: 0.6rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--dossier-muted);
  }

  .approval-row {
    display: grid;
    grid-template-columns: 100px 80px 60px 1fr 110px;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    border-bottom: 1px solid var(--dossier-border);
    font-size: 0.8rem;
    transition: background 0.15s;
  }

  .approval-row:last-child {
    border-bottom: none;
  }

  .approval-row:hover {
    background: var(--dossier-cream);
  }

  .approval-row[data-available="false"] {
    opacity: 0.5;
  }

  .approval-row .col-region {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .region-flag {
    font-size: 1rem;
  }

  .region-code {
    font-family: 'DM Mono', monospace;
    font-weight: 600;
    color: var(--dossier-accent);
  }

  .col-agency {
    font-family: 'DM Mono', monospace;
    font-size: 0.7rem;
    color: var(--dossier-muted);
  }

  .col-year {
    font-family: 'DM Mono', monospace;
    font-size: 0.75rem;
    color: var(--dossier-accent);
  }

  .col-ages {
    font-size: 0.75rem;
    color: var(--dossier-ink);
  }

  .col-status {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: 0.7rem;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--dossier-red);
  }

  .status-dot[data-available="true"] {
    background: var(--dossier-green);
  }

  @media (max-width: 700px) {
    .approvals-header {
      display: none;
    }

    .approval-row {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-2);
    }

    .approval-row .col-region {
      flex: 1;
      min-width: 80px;
    }

    .col-agency,
    .col-year,
    .col-ages {
      font-size: 0.7rem;
    }

    .col-status {
      width: 100%;
      margin-top: var(--space-1);
      padding-top: var(--space-2);
      border-top: 1px dashed var(--dossier-border);
    }
  }

  /* ============================================
     TRAVEL MODAL
     ============================================ */

  .travel-modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }

  .travel-modal.open {
    opacity: 1;
    visibility: visible;
  }

  .modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(26, 26, 46, 0.5);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    position: relative;
    width: 90%;
    max-width: 700px;
    max-height: 85vh;
    overflow-y: auto;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    transform: translateY(20px);
    transition: transform 0.3s;
  }

  .travel-modal.open .modal-content {
    transform: translateY(0);
  }

  .modal-close {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
    z-index: 10;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--dossier-paper);
    border: 1px solid var(--dossier-border);
    border-radius: 50%;
    cursor: pointer;
    color: var(--dossier-muted);
    transition: all 0.2s;
  }

  .modal-close:hover {
    background: var(--dossier-cream);
    color: var(--dossier-accent);
    border-color: var(--dossier-accent);
  }

  /* ============================================
     TRAVEL PASS (Boarding Pass - in modal)
     ============================================ */

  .travel-pass {
    --pass-bg: #fdfcfa;
    --pass-border: #e8e4dc;
    --pass-accent: #1a1a2e;
    --pass-muted: #8b8680;
    --pass-gold: #c4a052;
    --pass-cream: #f5f2eb;

    background: var(--pass-bg);
    border: 2px solid var(--pass-border);
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: var(--space-8);
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.03),
      0 10px 20px rgba(0, 0, 0, 0.04),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
    position: relative;
  }

  .travel-pass::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%' height='100%' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.02;
    pointer-events: none;
  }

  .pass-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-5) var(--space-6);
    background: linear-gradient(135deg, var(--pass-accent) 0%, #2d2d44 100%);
    color: #fff;
    position: relative;
  }

  .pass-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--pass-gold), #e8d5a3, var(--pass-gold));
  }

  .pass-header-left {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .pass-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .pass-icon svg {
    opacity: 0.9;
  }

  .pass-title-block {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .pass-eyebrow {
    font-family: 'DM Mono', monospace;
    font-size: 0.65rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.7;
  }

  .pass-drug-name {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.4rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .pass-controlled-stamp {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72px;
    height: 72px;
    border: 2px dashed rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    transform: rotate(-12deg);
    animation: stampPulse 3s ease-in-out infinite;
  }

  .pass-controlled-stamp .stamp-inner {
    font-family: 'DM Mono', monospace;
    font-size: 0.5rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: #fbbf24;
    text-align: center;
    line-height: 1.3;
  }

  .pass-perforation {
    height: 0;
    border-top: 2px dashed var(--pass-border);
    margin: 0 var(--space-4);
    position: relative;
  }

  .pass-perforation::before,
  .pass-perforation::after {
    content: '';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    background: #fff;
    border-radius: 50%;
    border: 2px solid var(--pass-border);
  }

  .pass-perforation::before {
    left: -10px;
    border-left-color: transparent;
  }

  .pass-perforation::after {
    right: -10px;
    border-right-color: transparent;
  }

  .pass-advisory {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4) var(--space-6);
    background: linear-gradient(90deg, #fef3c7 0%, #fef9e7 100%);
    border-bottom: 1px solid #fcd34d;
    align-items: flex-start;
  }

  .advisory-icon {
    flex-shrink: 0;
    color: #b45309;
    margin-top: 2px;
  }

  .advisory-text {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.6;
    color: #78350f;
  }

  .pass-info-grid {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-6);
    padding: var(--space-6);
    align-items: start;
  }

  @media (max-width: 600px) {
    .pass-info-grid {
      grid-template-columns: 1fr;
    }
  }

  .pass-docs {
    flex: 1;
  }

  .pass-section-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-family: 'DM Mono', monospace;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--pass-muted);
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--pass-border);
  }

  .docs-checklist {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .checklist-item {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
  }

  .check-box {
    flex-shrink: 0;
    width: 18px;
    height: 18px;
    border: 2px solid var(--pass-border);
    border-radius: 3px;
    margin-top: 2px;
    position: relative;
    background: #fff;
  }

  .check-box::after {
    content: '';
    position: absolute;
    top: 2px;
    left: 5px;
    width: 4px;
    height: 8px;
    border: 2px solid var(--pass-gold);
    border-top: none;
    border-left: none;
    transform: rotate(45deg);
    opacity: 0.6;
  }

  .check-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .check-label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--pass-accent);
  }

  .check-note {
    font-size: 0.75rem;
    color: var(--pass-muted);
  }

  .pass-supply {
    display: flex;
    justify-content: flex-end;
  }

  .supply-tag {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--pass-cream);
    border: 1px solid var(--pass-border);
    border-radius: 8px;
    padding: var(--space-3) var(--space-5);
    position: relative;
    box-shadow: 2px 2px 0 var(--pass-border);
  }

  .supply-tag .tag-hole {
    width: 12px;
    height: 12px;
    background: var(--pass-bg);
    border: 2px solid var(--pass-border);
    border-radius: 50%;
    margin-bottom: var(--space-2);
  }

  .supply-tag .tag-body {
    text-align: center;
  }

  .supply-tag .tag-label {
    display: block;
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--pass-muted);
    margin-bottom: 4px;
  }

  .supply-tag .tag-value {
    display: block;
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--pass-accent);
    line-height: 1;
  }

  .pass-routes {
    padding: 0 var(--space-6) var(--space-6);
  }

  .routes-title {
    margin-bottom: var(--space-5);
  }

  .routes-stack {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .route-ticket {
    background: #fff;
    border: 1px solid var(--pass-border);
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .route-ticket:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
  }

  .ticket-route {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-3) var(--space-4);
    background: linear-gradient(180deg, #fafaf8 0%, #fff 100%);
    border-bottom: 1px dashed var(--pass-border);
  }

  .route-endpoint {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    min-width: 50px;
  }

  .endpoint-flag {
    font-size: 1.2rem;
    line-height: 1;
  }

  .endpoint-code {
    font-family: 'DM Mono', monospace;
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--pass-accent);
    letter-spacing: 0.05em;
  }

  .route-flight-path {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    padding: 0 var(--space-4);
    position: relative;
  }

  .flight-dot {
    width: 8px;
    height: 8px;
    background: var(--pass-accent);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .flight-line {
    flex: 1;
    height: 2px;
    background: repeating-linear-gradient(
      90deg,
      var(--pass-border) 0,
      var(--pass-border) 4px,
      transparent 4px,
      transparent 8px
    );
  }

  .flight-plane {
    flex-shrink: 0;
    color: var(--pass-gold);
    margin: 0 var(--space-2);
    animation: flyPlane 2s ease-in-out infinite;
  }

  @keyframes flyPlane {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }

  .ticket-stamp {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
  }

  .stamp-circle {
    width: 42px;
    height: 42px;
    border: 2px solid var(--stamp-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: rotate(-15deg);
    background: rgba(255, 255, 255, 0.9);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.5);
  }

  .stamp-circle .stamp-text {
    font-family: 'DM Mono', monospace;
    font-size: 0.5rem;
    font-weight: 800;
    letter-spacing: 0.05em;
    color: var(--stamp-color);
    text-align: center;
  }

  .ticket-details {
    padding: var(--space-3) var(--space-4);
  }

  .detail-row {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
    font-size: 0.8rem;
  }

  .detail-icon {
    font-size: 0.8rem;
  }

  .detail-label {
    color: var(--pass-muted);
    font-weight: 500;
  }

  .detail-value {
    font-family: 'DM Mono', monospace;
    font-weight: 600;
    color: var(--pass-accent);
  }

  .detail-requirements {
    margin-top: var(--space-2);
  }

  .req-label {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--pass-muted);
    display: block;
    margin-bottom: var(--space-1);
  }

  .req-list {
    margin: 0;
    padding-left: var(--space-4);
    font-size: 0.8rem;
    line-height: 1.5;
    color: #4b5563;
  }

  .req-list li {
    margin-bottom: 0;
  }

  .req-list li::marker {
    color: var(--pass-gold);
  }

  .detail-notes {
    margin: var(--space-2) 0 0;
    padding: var(--space-2) var(--space-3);
    background: var(--pass-cream);
    border-radius: 4px;
    font-size: 0.75rem;
    line-height: 1.5;
    color: #6b7280;
    border-left: 2px solid var(--pass-gold);
  }

  .ticket-sources {
    padding: var(--space-2) var(--space-4);
    background: #f9fafb;
    border-top: 1px solid var(--pass-border);
    font-size: 0.65rem;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .sources-label {
    color: var(--pass-muted);
    font-weight: 500;
  }

  .source-link {
    color: #6366f1;
    text-decoration: none;
    padding: 2px 8px;
    background: #eef2ff;
    border-radius: 4px;
    transition: all 0.15s;
  }

  .source-link:hover {
    background: #6366f1;
    color: #fff;
  }

  .pass-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-5) var(--space-6);
    background: linear-gradient(180deg, #f9f9f7 0%, #f5f4f0 100%);
    border-top: 1px solid var(--pass-border);
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .pass-barcode {
    flex: 1;
    min-width: 120px;
    max-width: 200px;
  }

  .barcode-lines {
    display: flex;
    align-items: flex-end;
    gap: 2px;
    height: 40px;
  }

  .bar {
    width: 3px;
    background: var(--pass-accent);
    opacity: 0.2;
    border-radius: 1px;
  }

  .bar:nth-child(3n) {
    width: 2px;
  }

