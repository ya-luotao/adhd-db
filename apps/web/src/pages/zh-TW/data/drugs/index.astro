  CN: 'ðŸ‡¨ðŸ‡³',
  EU: 'ðŸ‡ªðŸ‡º',
  JP: 'ðŸ‡¯ðŸ‡µ',
  UK: 'ðŸ‡¬ðŸ‡§',
  AU: 'ðŸ‡¦ðŸ‡º',
  CA: 'ðŸ‡¨ðŸ‡¦'
};
---

<DatabaseLayout title={t('drugs.title')} activeTable="drugs">
  <article class="dossier">
    <!-- BREADCRUMB -->
    <nav class="breadcrumb">
      <a href={getLocalizedPath('/data', lang)} class="crumb">data</a>
      <span class="crumb-sep">/</span>
      <span class="crumb-current">drugs</span>
    </nav>

    <!-- CASE FILE HEADER -->
    <header class="case-file">
      <div class="case-file-band">
        <div class="case-file-left">
          <span class="case-label">DATABASE</span>
          <span class="case-number">DRUG-REGISTRY</span>
        </div>
        <div class="case-file-right">
          <span class="registry-stamp">
            <span class="stamp-border">
              <span class="stamp-text">ADHD<br/>MEDICATIONS</span>
            </span>
          </span>
        </div>
      </div>

      <div class="case-file-body">
        <div class="specimen-id">
          <span class="specimen-label">PHARMACEUTICAL DATABASE</span>
          <h1 class="specimen-name">Drug Registry</h1>
        </div>

        <p class="registry-desc">ADHD medication database with multi-region regulatory data</p>
      </div>

      <div class="case-file-stripe"></div>
    </header>

    <!-- REGISTRY BRIEF -->
    <section class="registry-brief">
      <div class="brief-header">
        <span class="brief-label">REGISTRY BRIEF</span>
        <span class="brief-date">{new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}</span>
      </div>

      <div class="brief-content">
        <!-- Regional Coverage Matrix -->
        <div class="brief-panel region-panel">
          <h3 class="panel-title">Regional Coverage</h3>
          <div class="region-matrix">
            {regionStats.map(({ region, available, total }) => {
              const pct = Math.round((available / total) * 100);
              const level = pct >= 80 ? 'high' : pct >= 50 ? 'medium' : 'low';
              return (
                <div class={`region-cell level-${level}`}>
                  <span class="region-flag">{regionLabels[region] || region}</span>
                  <span class="region-code">{region}</span>
                  <span class="region-count">{available}/{total}</span>
                  <div class="region-bar">
                    <div class="region-fill" style={`--pct: ${pct}%`}></div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>

        <!-- Class Distribution -->
        <div class="brief-panel class-panel">
          <h3 class="panel-title">Class Distribution</h3>
          <div class="class-viz">
            <div class="class-bar">
              <div class="class-segment stimulant" style={`--width: ${(stimulants.length / drugs.length) * 100}%`}>
                <span class="segment-label">{stimulants.length}</span>
              </div>
              <div class="class-segment non-stimulant" style={`--width: ${(nonStimulants.length / drugs.length) * 100}%`}>
                <span class="segment-label">{nonStimulants.length}</span>
              </div>
            </div>
            <div class="class-legend">
              <span class="legend-item stimulant">
                <span class="legend-dot"></span>
                Stimulant
              </span>
              <span class="legend-item non-stimulant">
                <span class="legend-dot"></span>
                Non-Stimulant
              </span>
            </div>
          </div>
        </div>

        <!-- Key Insight -->
        <div class="brief-panel insight-panel">
          <h3 class="panel-title">Key Insight</h3>
          <div class="insight-card">
            <div class="insight-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 16v-4"></path>
                <path d="M12 8h.01"></path>
              </svg>
            </div>
            <div class="insight-content">
              <span class="insight-label">Most Widely Approved</span>
              <a href={getLocalizedPath(`/data/drugs/${mostApproved.drug.id}`, lang)} class="insight-value">
                {l(mostApproved.drug.genericName)}
              </a>
              <span class="insight-detail">Available in {mostApproved.approvalCount} of {allRegions.length} regions</span>
            </div>
          </div>
        </div>

        <!-- Summary Stats -->
        <div class="brief-panel summary-panel">
          <h3 class="panel-title">Summary</h3>
          <div class="summary-grid">
            <div class="summary-item">
              <span class="summary-value">{drugs.length}</span>
              <span class="summary-label">Total Entries</span>
            </div>
            <div class="summary-item">
              <span class="summary-value">{allRegions.length}</span>
              <span class="summary-label">Regions Tracked</span>
            </div>
            <div class="summary-item">
              <span class="summary-value">{totalApprovals}</span>
              <span class="summary-label">Active Approvals</span>
            </div>
            <div class="summary-item">
              <span class="summary-value">{Math.round((totalApprovals / (drugs.length * allRegions.length)) * 100)}%</span>
              <span class="summary-label">Coverage Rate</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- DATA TABLE -->
    <section class="records-section">
      <h2 class="section-title">
        <span class="title-marker"></span>
        All Records
        <span class="record-count">{drugs.length} entries</span>
      </h2>

      <div class="records-table">
        <div class="table-header">
          <span class="col-id">ID</span>
          <span class="col-name">Generic Name</span>
          <span class="col-class">Class</span>
          <span class="col-category">Category</span>
          <span class="col-approvals">Approvals</span>
        </div>
        {drugs.map((drug, idx) => {
          const availableCount = drug.approvals?.filter((a: any) => a.available).length || 0;
          const totalRegions = drug.approvals?.length || 0;
          const classColor = classColors[drug.drugClass as keyof typeof classColors] || '#888';
          return (
            <a href={getLocalizedPath(`/data/drugs/${drug.id}`, lang)} class="table-row" data-idx={idx}>
              <span class="col-id">
                <code>{drug.id}</code>
              </span>
              <span class="col-name">{l(drug.genericName)}</span>
              <span class="col-class">
                <span class="class-badge" style={`--class-color: ${classColor}`}>
                  {l(drug.drugClassLabel) || drug.drugClass}
                </span>
              </span>
              <span class="col-category">{l(drug.categoryLabel) || drug.category}</span>
              <span class="col-approvals">
                <span class="approval-indicator">
                  <span class="approval-bar" style={`--fill: ${(availableCount / totalRegions) * 100}%`}></span>
                  <span class="approval-text">{availableCount}/{totalRegions}</span>
                </span>
              </span>
            </a>
          );
        })}
      </div>
    </section>

    <!-- SCHEMA SECTION -->
    <section class="archive-section">
      <details class="archive-folder">
        <summary class="folder-tab">
          <div class="tab-left">
            <span class="folder-icon">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
            </span>
            <span class="folder-label">Schema Definition</span>
          </div>
          <div class="tab-right">
            <span class="classified-stamp">SPEC</span>
            <span class="folder-toggle">+</span>
          </div>
        </summary>
        <div class="folder-contents">
          <div class="file-header">
            <span class="file-id">TYPE: Drug</span>
          </div>
          <div class="schema-grid">
            <div class="schema-field">
              <span class="field-key">id</span>
              <span class="field-type">string</span>
            </div>
            <div class="schema-field">
              <span class="field-key">genericName</span>
              <span class="field-type">LocalizedString</span>
            </div>
            <div class="schema-field">
              <span class="field-key">drugClass</span>
              <span class="field-type">"stimulant" | "non-stimulant"</span>
            </div>
            <div class="schema-field">
              <span class="field-key">category</span>
              <span class="field-type">string</span>
            </div>
            <div class="schema-field">
              <span class="field-key">brandNames</span>
              <span class="field-type">Record&lt;Region, string[]&gt;</span>
            </div>
            <div class="schema-field">
              <span class="field-key">approvals</span>
              <span class="field-type">Approval[]</span>
            </div>
            <div class="schema-field">
              <span class="field-key">formulations</span>
              <span class="field-type">Formulation[]</span>
            </div>
            <div class="schema-field">
              <span class="field-key">pharmacology</span>
              <span class="field-type">Pharmacology</span>
            </div>
            <div class="schema-field">
              <span class="field-key">sideEffects</span>
              <span class="field-type">SideEffect[]</span>
            </div>
          </div>
        </div>
      </details>
    </section>
  </article>
</DatabaseLayout>

<style>
  /* ===========================================
   * PHARMACEUTICAL DOSSIER DESIGN SYSTEM
   * =========================================== */

  .dossier {
    --dossier-bg: #fdfcfa;
    --dossier-paper: #fffef9;
    --dossier-border: #e8e4dc;
    --dossier-accent: #1a1a2e;
    --dossier-muted: #8b8680;
    --dossier-gold: #c4a052;
    --dossier-cream: #f5f2eb;
    --dossier-ink: #2c2c2c;
    --dossier-red: #c53030;
    --dossier-green: #276749;
    --dossier-blue: #2b6cb0;

    max-width: 1000px;
    color: var(--dossier-ink);
  }

  /* Paper texture overlay */
  .dossier::before {
    content: '';
    position: fixed;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%' height='100%' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.015;
    pointer-events: none;
    z-index: -1;
  }

  /* BREADCRUMB */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
    font-family: 'DM Mono', monospace;
    font-size: 0.7rem;
    letter-spacing: 0.05em;
  }

  .crumb {
    color: var(--dossier-muted);
    text-decoration: none;
    transition: color 0.15s;
  }

  .crumb:hover {
    color: var(--dossier-gold);
  }

  .crumb-sep {
    color: var(--dossier-border);
  }

  .crumb-current {
    color: var(--dossier-accent);
    font-weight: 500;
  }

  /* ============================================
     CASE FILE HEADER
     ============================================ */

  .case-file {
    background: var(--dossier-paper);
    border: 2px solid var(--dossier-border);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: var(--space-8);
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.02),
      0 10px 20px rgba(0, 0, 0, 0.03),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
    position: relative;
  }

  .case-file-band {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3) var(--space-5);
    background: var(--dossier-cream);
    border-bottom: 1px solid var(--dossier-border);
  }

  .case-file-left {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .case-label {
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--dossier-muted);
  }

  .case-number {
    font-family: 'DM Mono', monospace;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: var(--dossier-accent);
  }

  .case-file-right {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .registry-stamp {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .stamp-border {
    width: 52px;
    height: 52px;
    border: 2px dashed var(--dossier-gold);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: rotate(-12deg);
    opacity: 0.7;
  }

  .stamp-border .stamp-text {
    font-family: 'DM Mono', monospace;
    font-size: 0.35rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: var(--dossier-gold);
    text-align: center;
    line-height: 1.4;
  }

  .case-file-body {
    padding: var(--space-6);
  }

  .specimen-id {
    margin-bottom: var(--space-3);
  }

  .specimen-label {
    display: block;
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--dossier-muted);
    margin-bottom: var(--space-2);
  }

  .specimen-name {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 600;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--dossier-accent);
    margin: 0;
  }

  .registry-desc {
    font-size: 0.9rem;
    color: var(--dossier-muted);
    margin: 0;
  }

  .case-file-stripe {
    height: 4px;
    background: linear-gradient(90deg,
      var(--dossier-gold) 0%,
      #e8d5a3 50%,
      var(--dossier-gold) 100%
    );
  }

  /* ============================================
     REGISTRY BRIEF
     ============================================ */

  .registry-brief {
    margin-bottom: var(--space-8);
    background: var(--dossier-paper);
    border: 1px solid var(--dossier-border);
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .brief-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3) var(--space-4);
    background: var(--dossier-accent);
    color: var(--dossier-cream);
  }

  .brief-label {
    font-family: 'DM Mono', monospace;
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.15em;
  }

  .brief-date {
    font-family: 'DM Mono', monospace;
    font-size: 0.6rem;
    opacity: 0.7;
  }

  .brief-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1px;
    background: var(--dossier-border);
  }

  .brief-panel {
    padding: var(--space-4);
    background: var(--dossier-paper);
  }

  .panel-title {
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--dossier-muted);
    margin: 0 0 var(--space-3);
    padding-bottom: var(--space-2);
    border-bottom: 1px dashed var(--dossier-border);
  }

  /* Regional Coverage Matrix */
  .region-matrix {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(70px, 1fr));
    gap: var(--space-2);
  }

  .region-cell {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    padding: var(--space-2);
    background: var(--dossier-cream);
    border-radius: 3px;
    border: 1px solid transparent;
    transition: border-color 0.2s, transform 0.2s;
  }

  .region-cell:hover {
    transform: translateY(-1px);
  }

  .region-cell.level-high {
    border-color: rgba(39, 103, 73, 0.3);
  }

  .region-cell.level-medium {
    border-color: rgba(196, 160, 82, 0.4);
  }

  .region-cell.level-low {
    border-color: rgba(197, 48, 48, 0.2);
  }

  .region-flag {
    font-size: 1.1rem;
    line-height: 1;
  }

  .region-code {
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 700;
    color: var(--dossier-accent);
    letter-spacing: 0.05em;
  }

  .region-count {
    font-family: 'DM Mono', monospace;
    font-size: 0.6rem;
    color: var(--dossier-muted);
  }

  .region-bar {
    width: 100%;
    height: 3px;
    background: var(--dossier-border);
    border-radius: 2px;
    overflow: hidden;
    margin-top: 2px;
  }

  .region-fill {
    height: 100%;
    width: var(--pct);
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  .level-high .region-fill {
    background: var(--dossier-green);
  }

  .level-medium .region-fill {
    background: var(--dossier-gold);
  }

  .level-low .region-fill {
    background: var(--dossier-red);
  }

  /* Class Distribution */
  .class-viz {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .class-bar {
    display: flex;
    height: 28px;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .class-segment {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--width);
    min-width: 40px;
    transition: filter 0.2s;
  }

  .class-segment:hover {
    filter: brightness(1.1);
  }

  .class-segment.stimulant {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  }

  .class-segment.non-stimulant {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  }

  .segment-label {
    font-family: 'DM Mono', monospace;
    font-size: 0.7rem;
    font-weight: 700;
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .class-legend {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-family: 'DM Mono', monospace;
    font-size: 0.6rem;
    color: var(--dossier-muted);
  }

  .legend-dot {
    width: 8px;
    height: 8px;
    border-radius: 2px;
  }

  .legend-item.stimulant .legend-dot {
    background: #ef4444;
  }

  .legend-item.non-stimulant .legend-dot {
    background: #3b82f6;
  }

  /* Key Insight */
  .insight-card {
    display: flex;
    gap: var(--space-3);
    padding: var(--space-3);
    background: linear-gradient(135deg, var(--dossier-cream) 0%, rgba(196, 160, 82, 0.1) 100%);
    border-radius: 4px;
    border-left: 3px solid var(--dossier-gold);
  }

  .insight-icon {
    display: flex;
    align-items: flex-start;
    color: var(--dossier-gold);
    flex-shrink: 0;
    padding-top: 2px;
  }

  .insight-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .insight-label {
    font-family: 'DM Mono', monospace;
    font-size: 0.55rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--dossier-muted);
  }

  .insight-value {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--dossier-accent);
    text-decoration: none;
    transition: color 0.2s;
  }

  .insight-value:hover {
    color: var(--dossier-gold);
  }

  .insight-detail {
    font-size: 0.7rem;
    color: var(--dossier-muted);
  }

  /* Summary Stats */
  .summary-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
  }

  .summary-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    padding: var(--space-2);
    background: var(--dossier-cream);
    border-radius: 3px;
  }

  .summary-value {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.4rem;
    font-weight: 700;
    line-height: 1;
    color: var(--dossier-accent);
  }

  .summary-label {
    font-family: 'DM Mono', monospace;
    font-size: 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--dossier-muted);
    text-align: center;
  }

  /* ============================================
